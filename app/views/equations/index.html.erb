<p id="notice"><%= notice %></p>

<h1>Listing Equations</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Figure</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equations.each do |equation| %>
      <tr>
        <td><%= equation.title %></td>
        <td><%= equation.figure.html_safe %></td>
        <td><%= link_to 'Show', equation %></td>
        <td>
          <div data-no-turbolink >
            <%= link_to 'Edit', edit_equation_path(equation) %>
          </div>
        </td>
        <td><%= link_to 'Destroy', equation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div data-no-turbolink >
  <%= link_to 'New Equation', new_equation_path %>
</div>
